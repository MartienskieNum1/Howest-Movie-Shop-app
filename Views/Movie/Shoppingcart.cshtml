@model app.Models.ShoppingCartViewModel

@{
    Layout = "_LayoutShop";
    decimal totalPrice = 0;
    foreach (var movie in Model.Movies)
    {
        totalPrice += movie.Price;
    }
}

<section id="cart">
<div id="cartoverview">
    <h2>Your shopping cart</h2>

    @if (Model.Movies.Count == 0)
    {
        <p>Please place an order from our <a href="/Movies">collection</a> to continue</p>
    } else
    {
        <p>You have selected the following movies so far:</p>
        <div class="items">
        <table>
            <thead>
            <tr>
                <th>Movie</th>
                <th>Price</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Movies)
                {
                    <tr>
                        <td>@movie.Title</td>
                        <td>€ @movie.Price</td>
                    </tr>
                }
            </tbody>
            <tfoot>
            <tr>
                <td></td>
                <td>
                    Total:€ @totalPrice
                </td>
            </tr>
            </tfoot>
        </table>
        </div>
        <a class="order" href="">Proceed to checkout</a>
    }   
    </div>
</section>