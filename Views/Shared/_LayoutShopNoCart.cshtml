<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Howest Movie Shop</title>
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,800" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/css/screen.css" />

</head>

<body>
    <header>
        <h1>Howest Movie Shop</h1>
        <nav>
            <ul>
                <li><a href="/Movie">Collection</a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li><a href="/Order">Orders</a></li>
                }
                @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
                        </li>
                        <li class="nav-item">
                            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Movies", "Movie", new { area = "" })">
                                <button id="logout"  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                    }
            </ul>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <div>
            <h2>Address</h2>
            <address>
                Rijselstraat 5, <br />
                8000 Brugge
            </address>
        </div>
        <p>All images courtesy of flaticon</p>
    </footer>

</body>

</html>